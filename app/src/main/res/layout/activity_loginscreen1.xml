<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginscreen1"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="113dp"
        android:src="@drawable/hacky_logo"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.357"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:layout_marginEnd="140dp"
        android:src="@drawable/khayaal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.282"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="415dp"
        android:layout_height="408dp"
        android:background="@drawable/gradient"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="307dp"
            android:layout_height="73dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/welcometxt" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/patient"
            android:layout_width="175dp"
            android:layout_height="49dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/pbutton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/family"
            android:layout_width="175dp"
            android:layout_height="49dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/fbutton" />

        <TextView
            android:layout_width="23dp"
            android:layout_height="13dp"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/or" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="175dp"
            android:layout_height="49dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/signup" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>

